#!/bin/bash
DIR=/data
MON[1]=082699
MON[2]=359611
MON[3]=899250
MON[4]=260243
MON[5]=453268
MON[6]=491294
while true; do
  clear
  for ((i=1;i<=20;i++)); do
    if [ ! -z "${MON[i]}" ]; then
      if [ -d "${DIR}/${MON[${i}]}" ]; then
        cd "${DIR}/${MON[${i}]}"
        ~/pr | grep -vEi '^================$|SHUTDOWN|no reducer scripts were found in this directory' | sed '/Coredumps found in trials/,+1d'
      else
        echo "Index ${i} seems to be invalid: directopry ${DIR}/${MON[${i}]} does not exist!"
        exit 1
      fi
    fi
  done
  sleep 60
done
