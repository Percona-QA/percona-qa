#!/bin/bash
DIR=/data
MON[1]=665428
MON[2]=185127
MON[3]=097468
MON[4]=458479
MON[5]=609197
MON[6]=361231
MON[7]=462324
MON[8]=462915
while true; do
  clear
  for ((i=1;i<=20;i++)); do
    if [ ! -z "${MON[i]}" ]; then
      if [ -d "${DIR}/${MON[${i}]}" ]; then
        cd "${DIR}/${MON[${i}]}"
        ~/pr | grep -vEi '^================$|SHUTDOWN|no reducer scripts were found in this directory' | sed '/Coredumps found in trials/,+1d'
      else
        echo "Index ${i} seems to be invalid: directopry ${DIR}/${MON[${i}]} does not exist!"
        exit 1
      fi
    fi
  done
  sleep 60
done
