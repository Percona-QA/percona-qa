cp copyin ${TARGET}
cp backup_github ${TARGET}
cp count_all ${TARGET}
cp findbug ${TARGET}
cp findbug+ ${TARGET}
cp gendirs.sh ${TARGET}
cp kill_all ${TARGET}
cp kill_ge ${TARGET}
cp kill_pr ${TARGET}
cp kill_s ${TARGET}
cp stop_all ${TARGET}
cp start_all ${TARGET}
cp startup_all ${TARGET}
cp t_all ${TARGET}
cp all_all ${TARGET}
cp sge_all ${TARGET}
cp clean_all ${TARGET}
