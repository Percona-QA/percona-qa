#!/bin/bash
if [ ! -d /test ]; then echo '/test does not exist, did you create it and execute cp ~/mariadb-qa/mariadb-build-qa/* /test yet?'; exit 1; fi
if [ ! -d /data ]; then echo '/data does not exist yet? Please create it'; exit 1; fi
mkdir -p /data/NEWBUGS /data/FIREWORKS
ln -s /test/clean_all /data/clean_all  2>&1 | grep -v 'File exists'
ln -s /test/monitor_run /data/monitor_run 2>&1 | grep -v 'File exists'
ln -s /test/monitor_runs /data/monitor_runs 2>&1 | grep -v 'File exists'
ln -s /test/multi_sr_all /data/multi_sr_all 2>&1 | grep -v 'File exists'
ln -s /test/multi_sr_leftover /data/multi_sr_leftover 2>&1 | grep -v 'File exists'
ln -s /test/sge_all /data/sge_all 2>&1 | grep -v 'File exists'
ln -s /test/kill_ge /data/kill_ge 2>&1 | grep -v 'File exists'
ln -s /test/kill_pr /data/kill_pr 2>&1 | grep -v 'File exists'
ln -s /test/todaysruns /data/todaysruns 2>&1 | grep -v 'File exists'
ln -s /test/allruns /data/allruns 2>&1 | grep -v 'File exists'
ln -s /test/scan_MYBUG /data/scan_MYBUG 2>&1 | grep -v 'File exists'
ln -s /test/find_deadlocks /data/find_deadlocks 2>&1 | grep -v 'File exists'
ln -s /test/report_opt /data/report_opt 2>&1 | grep -v 'File exists'
ln -s /test/report_dbg /data/report_dbg 2>&1 | grep -v 'File exists'
ln -s /test/clean /data/clean 2>&1 | grep -v 'File exists'
ln -s /test/results /data/results 2>&1 | grep -v 'File exists'
ln -s /test/my /data/my 2>&1 | grep -v 'File exists'
ln -s /test/my_san /data/my_san 2>&1 | grep -v 'File exists'
ln -s /test/my2 /data/my2 2>&1 | grep -v 'File exists'
ln -s /test/mybugs /data/mybugs 2>&1 | grep -v 'File exists'
ln -s /test/move_newbugs /data/move_newbugs 2>&1 | grep -v 'File exists'
ln -s /test/semaphore /data/semaphore 2>&1 | grep -v 'File exists'
ln -s /test/copy_all_tests /data/copy_all_tests 2>&1 | grep -v 'File exists'
ln -s /test/clean_newbugs /data/clean_newbugs 2>&1 | grep -v 'File exists'
ln -s /test/gen_newbug_reducers /data/gen_newbug_reducers 2>&1 | grep -v 'File exists'
ln -s /home/$(whoami)/newbug /test/newbug 2>&1 | grep -v 'File exists'
ln -s /test/copyin /home/$(whoami)/copyin 2>&1 | grep -v 'File exists'
ln -s /test/newbug_clean /home/$(whoami)/nc 2>&1 | grep -v 'File exists'
ln -s /test/uniq_newbugs /data/uniq_newbugs 2>&1 | grep -v 'File exists'
ln -s /test/uniq_newbugs /data/NEWBUGS/uniq_newbugs 2>&1 | grep -v 'File exists'
ln -s /test/uniq_newbugs /data/FIREWORKS/uniq_newbugs 2>&1 | grep -v 'File exists'
ln -s /test/uniq_newbugs /test/TESTCASES/uniq_newbugs 2>&1 | grep -v 'File exists'

echo 'Done!'
exit 0
