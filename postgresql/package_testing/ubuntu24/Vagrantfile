Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-24.04"
  config.vm.network "forwarded_port", guest: 5432, host: 5438
  config.vm.provision "shell",
    path: "provision.sh",
    env: {
      "REPO" => ENV['REPO'],
      "PG_VERSION" => ENV['PG_VERSION'],
      "PG_MAJOR" => ENV['PG_MAJOR']
    }
end
