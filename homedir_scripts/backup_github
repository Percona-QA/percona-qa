#!/bin/bash
# Created by Roel Van de Paar, MariaDB

if [ ! -d ~/mariadb-qa ]; then
  echo "Assert: this script expects ~/mariadb-qa to be present. Please do:"
  echo "cd ~ && git clone https://github.com/mariadb-corporation/mariadb-qa.git"
  exit 1
fi

